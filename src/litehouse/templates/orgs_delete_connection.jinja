{% import 'form_macros.jinja' as form %}


{# Update the 'deleteConnection' Modal with attributes from the selected Connection. #}
<div class="modal-header text-danger bg-primary-subtle" data-bs-theme="dark">
    <h5 class="modal-title"><i class="bi bi-exclamation-circle-fill"></i> {{ connection['name'] }}</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <p>Are you sure you want to delete <strong>{{ connection['name'] }}</strong>?</p>
    <form id="delete_connection"
          hx-post="{{ url_for('orgs.delete_connection') }}"
          hx-swap="outerHTML"
          hx-target="#base_messages">
        {{ form.add_input(id='id', type='hidden', value=connection['id']) }}
    </form>
</div>
<div class="modal-footer bg-primary-subtle" data-bs-theme="dark">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary" form="delete_connection">Yes</button>
</div>