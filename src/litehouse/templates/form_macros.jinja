{# For generating a text, or similar type, form inputs in the HTML. #}
{% macro add_input(id, class='form-control', label='', value='', type='text', readonly=False, required=False, number_step='1', placeholder='', style='') -%}
<div class="mb-2">
    {% if type != 'hidden' and label is not none %}
        <label for="{{ id }}" class="col-form-label"><strong>{{ label }}</strong></label>
    {% endif %}
    <input type="{{ type }}"
           class="{{ class }}"
           name="{{ id }}"
           id="{{ id }}"
           autocomplete="off"
           {% if type == 'number' -%} step="{{ number_step }}" {%- endif %}
           {% if placeholder is not none -%} placeholder="{{ placeholder }}" {%- endif %}
           {% if value is not none -%} value="{{ value }}" {%- endif %}
           {% if style is not none -%} style="{{ style }}"{%- endif %}
           {% if readonly -%} readonly{%- endif %}
           {% if required -%} required{%- endif %}>
</div>
{%- endmacro %}


{# For generating a textarea form inputs in the HTML. Primarily for the query text. #}
{% macro add_textarea(id, class='form-control', value='', rows=5, readonly=False, required=False) -%}
<div class="mb-2 font-monospace">
    <textarea class="{{ class }}"
              name="{{ id }}"
              id="{{ id }}"
              rows="{{ rows }}"
              autocomplete="off"
              {% if readonly -%} readonly {% endif %}
              {% if required -%} required {%- endif %}>{% if value is not none -%} {{ value }} {%- endif %}</textarea>
</div>
{%- endmacro %}


{# For generating radio button form inputs in the HTML. Primarily for the Org management view. #}
{% macro add_radio(id, name, value, default=False, check=None, required=False) -%}
<div class="form-check form-check-inline">
    <input type="radio"
           id="{{ id }}"
           name="{{ name }}"
           value="{{ value }}"
           {% if default -%} checked {% elif check == value %} checked {%- endif %}>
    <label for="{{ id }}">{{ value }}</label>
</div>
{%- endmacro %}